<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/offset"
    tools:context="com.dmitry.kartsev.yandextranslatetool.view.activity.MainActivity">

    <RelativeLayout
        android:layout_width="336dp"
        android:layout_height="463dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <EditText
            android:id="@+id/editWord"
            android:layout_width="fill_parent"
            android:layout_height="76dp"
            android:hint="@string/hint_enter_word"
            android:inputType="text" />

        <TextView
            android:id="@+id/textTranslationVariants"
            android:layout_width="fill_parent"
            android:layout_height="386dp"
            android:layout_below="@+id/editWord"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
