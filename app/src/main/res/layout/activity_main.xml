<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.dmitry.kartsev.yandextranslatetool.view.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="463dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_margin="@dimen/offset">
        <RelativeLayout
            android:id="@+id/editWordLayout"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@drawable/translate_border">

            <EditText
                android:id="@+id/editWord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/translate_border"
                android:gravity="top"
                android:hint="@string/hint_enter_word"
                android:inputType="textMultiLine"
                android:padding="@dimen/text_to_translate_padding"
                android:textSize="@dimen/text_to_translate" />

            <ImageButton
                android:id="@+id/imageBtnRec"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/btn_margin"
                android:layout_marginRight="@dimen/btn_margin"
                android:layout_marginTop="@dimen/btn_margin"
                app:srcCompat="@android:drawable/ic_btn_speak_now" />

            <ImageButton
                android:id="@+id/imageBtnClear"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/btn_margin"
                android:layout_marginLeft="@dimen/btn_margin"
                android:layout_marginStart="@dimen/btn_margin"
                app:srcCompat="@drawable/close" />


        </RelativeLayout>

        <TextView
            android:id="@+id/textObjectToTranslate"
            android:layout_width="fill_parent"
            android:layout_height="36dp"
            android:layout_below="@+id/editWordLayout"
            android:layout_marginTop="@dimen/icon_size"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textTranslationVariants"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/textObjectToTranslate"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
